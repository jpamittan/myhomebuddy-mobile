<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".SellerOrderScheduleDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtvScheduleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date:" />

            <TextView
                android:id="@+id/txtvScheduleTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time:" />

            <TextView
                android:id="@+id/txtvScheduleQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity:" />

            <TextView
                android:id="@+id/txtvScheduleAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total amount:" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Remarks:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etmRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:minLines="5" />

            <Button
                android:id="@+id/btnScheduleCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:text="Cancel schedule" />

            <Button
                android:id="@+id/btnScheduleDelivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#009688"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:text="Delivered" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
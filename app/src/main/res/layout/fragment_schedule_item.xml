<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtvScheduleItemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datetime"
        android:textColor="#303030"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtvScheduleItemQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvScheduleItemDate"
        android:layout_alignLeft="@id/txtvScheduleItemDate"
        android:layout_marginTop="2dp"
        android:text="0.00 (0pcs)"
        android:textColor="#303030"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtvScheduleItemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvScheduleItemQty"
        android:layout_alignLeft="@id/txtvScheduleItemQty"
        android:layout_marginTop="2dp"
        android:text="Status"
        android:textColor="#303030"
        android:textSize="10sp"
        android:textStyle="italic" />

</RelativeLayout>
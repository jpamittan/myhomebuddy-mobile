<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerProfileActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgvSellerProfileImage"
                android:layout_width="96dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_image_placeholder"
                android:scaleType="center" />

            <TextView
                android:id="@+id/txtvSellerProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fullname"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvSellerProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Email"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtvSellerProfileDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="User Profile"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvSellerProfileBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday" />

            <TextView
                android:id="@+id/txtvSellerProfileGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender" />

            <TextView
                android:id="@+id/txtvSellerProfilePhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone no" />

            <TextView
                android:id="@+id/txtvSellerProfileMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile no" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Business Info"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessPermitNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permit no" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessProductService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product/Service" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessCredentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Business Credentials"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgvSellerProfilePermitNo"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgvSellerProfileValidId"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgvSellerProfileSelfie"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Business Address"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddressUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddressStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddressBarangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barangay" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddressCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City" />

            <TextView
                android:id="@+id/txtvSellerProfileBusinessAddressZip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zip" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>